                running = 0;
            }

            if (choice == 1 && running == 1) {
                if (load_file(path) == 1) {
                    loaded = 1;
                } else {
                    printf("n/a\n");
                    loaded = 0;
                }
                printf("\n");
            }

            if (choice == 2 && running == 1) {
                if (loaded == 1 && write_to_file(path) == 1) {
                    int read_result = read_file(path);
                    if (read_result == 1) {
                        printf("\n");
                    } else {
                        printf("n/a\n\n");
